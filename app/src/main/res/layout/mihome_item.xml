<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mi_item_container"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_m"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/mihome_item_border"
    android:elevation="5dp">


    <ImageView
        android:id="@+id/mi_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mi_item_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="2"
        android:textColor="@color/darkText"
        android:textSize="@dimen/text_size_m"
        app:layout_constraintStart_toEndOf="@+id/mi_item_image"
        app:layout_constraintTop_toTopOf="@+id/mi_item_image"
        tools:text="Depuratore" />

    <TextView
        android:id="@+id/mi_item_plugin_latest_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/text_size_xxs"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/mi_item_plugin_version"
        app:layout_constraintStart_toEndOf="@+id/mi_item_image"
        tools:text="v.023123" />

    <TextView
        android:id="@+id/mi_item_plugin_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/text_size_xxs"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/mi_item_image"
        app:layout_constraintStart_toEndOf="@+id/mi_item_image"
        tools:text="v.023123" />

    <ImageView
        android:id="@+id/mi_item_flag"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chinese_flag" />


</android.support.constraint.ConstraintLayout>